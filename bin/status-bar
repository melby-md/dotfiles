#!/bin/sh
while true; do
	dat=$(LC_ALL=pt_BR.UTF-8 date +'%Y-%m-%d %H:%M %A')

	pow=$(cat /sys/class/power_supply/BAT0/capacity | tr -d '\n')
	case "$(cat /sys/class/power_supply/BAT0/status)" in
		"Full") status="âš¡" ;;
		"Discharging") status="ğŸ”‹" ;;
		"Charging") status="ğŸ”Œ" ;;
		"Not charging") status="ğŸ›‘" ;;
		"Unknown") status="â™»ï¸" ;;
	esac

	if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
		wifiicon="$(awk '/^\s*w/ { print "ğŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
	elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
		[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ğŸ“¡ " || wifiicon="âŒ "
	fi

	echo "$wifiicon| $pow%$status | $dat"
	sleep 10
done
